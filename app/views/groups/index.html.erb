<div class="col-md-12">
  <div class="group">
    <%= link_to("發表新文章", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>標題</td>
        <td>內文</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td>  <%= link_to(truncate(group.title, length: 15 ), group_path(group)) %> </td>
          <td><%= group.description %></td>
          <td>
              <% if group.editable_by?(current_user) %>
              <%= link_to("編輯", edit_group_path(group), class: "btn btn-sm btn-default")%>
              <%= link_to("刪除", group_path(group),      class: "btn btn-sm btn-default",
                           method: :delete, data: { confirm: "確認是否刪除？"} )%>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
